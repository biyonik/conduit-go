# -----------------------------------------------------------------------------
# Environment Variables - Example
# -----------------------------------------------------------------------------
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin:
#   cp .env.example .env
# -----------------------------------------------------------------------------

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=Conduit-Go
APP_ENV=development
APP_URL=http://localhost:8000

# =============================================================================
# SERVER
# =============================================================================
PORT=8000

# =============================================================================
# DATABASE
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=conduit_go
DB_USERNAME=conduit
DB_PASSWORD=password

# Full DSN (bu kullanılıyor)
DB_DSN=conduit:password@tcp(127.0.0.1:3306)/conduit_go?parseTime=true&loc=UTC

# Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=300  # saniye (5 dakika)

# =============================================================================
# REDIS (Phase 3 için hazırlık)
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# =============================================================================
# SECURITY
# =============================================================================
# CSRF Token ayarları
CSRF_TOKEN_LENGTH=32
CSRF_TOKEN_LIFETIME=7200  # saniye (2 saat)

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# JWT (Phase 2 için hazırlık)
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=3600  # saniye (1 saat)
JWT_REFRESH_EXPIRATION=604800  # saniye (7 gün)

# =============================================================================
# MAIL (Phase 3 için hazırlık)
# =============================================================================
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@conduit-go.local
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_CHANNEL=stdout
LOG_FILE=storage/logs/app.log

# =============================================================================
# AWS (Phase 3 - File Storage için hazırlık)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# =============================================================================
# SENTRY (Error Tracking - Opsiyonel)
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=${APP_ENV}

# Cache Configuration
# Drivers: redis, file, memory
# - redis: Production (fast, distributed) - Redis bağlantısı gerektirir
# - file: Development/Shared hosting (persistent, no dependencies)
# - memory: Testing (ultra-fast, non-persistent)
CACHE_DRIVER=memory

# Cache key prefix (namespace)
# Örnek: "myapp:" -> keys: "myapp:users:all", "myapp:posts:123"
CACHE_PREFIX=conduit:

# File cache directory (CACHE_DRIVER=file ise kullanılır)
CACHE_FILE_DIR=./storage/cache

# -----------------------------------------------------------------------------
# Mail Configuration (Phase 3 - Skeleton)
# -----------------------------------------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM_ADDRESS=noreply@conduit-go.local

QUEUE_DRIVER=redis          # redis, database, sync
QUEUE_DEFAULT=default       # Default queue name
QUEUE_RETRY_AFTER=90        # Retry after seconds
QUEUE_MAX_ATTEMPTS=3        # Maximum attempts